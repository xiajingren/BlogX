@page "/p/{id}"
@model DetailModel
@{
    ViewData["Title"] = "Detail";
}

@await Html.PartialAsync("_TopNavbar")

<main class="container-fluid">
    <div class="row py-3">
        @await Html.PartialAsync("_SideNavBar", Model.SideNavItems)

        <div class="col-md-8" data-bs-spy="scroll" data-bs-target="#my-toc" data-bs-smooth-scroll="true">
            <div class="container-fluid">
                <article>
                    <h2>@Model.PageDetail?.Title</h2>
                    <div class="my-3">
                        @Html.Raw(Model.PageDetail?.Content)
                    </div>
                </article>
            </div>
        </div>

        @await Html.PartialAsync("_Outline")
    </div>
</main>
