@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-sm-8">
        @foreach (var post in Model.PostVMs)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    @if (!string.IsNullOrWhiteSpace(post.Img))
                    {
                        <div class="col-md-4">
                            @* <img
                    src="https://img2.baidu.com/it/u=2006376456,1831574063&fm=253&fmt=auto&app=138&f=JPEG?w=880&h=500"
                    class="card-img ms-sm-3" alt="..."> *@
                            <img src="@post.Img" class="img-fluid rounded-start h-100" alt="...">
                        </div>
                    }
                    <div class="col">
                        <div class="card-body d-flex flex-column h-100">
                            <h5 class="card-title">
                                <a asp-page="./Details" asp-route-id="@post.Id"
                                    class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover">
                                    @post.Title
                                </a>
                            </h5>
                            <p class="card-text flex-fill">@post.Summary</p>
                            <p class="card-text text-end text-body-secondary"><small>作者：@post.Author</small><small
                                    class="ms-3">更新时间：@post.UpdatedTime</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <nav aria-label="Page navigation example" class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-sm-4">
        <div class="card mb-3">
            <div class="card-header">
                网站信息
            </div>
            <div class="card-body">
                <p class="card-text">当前在线：1</p>
                <p class="card-text">当前在线：1</p>
                <p class="card-text">当前在线：1</p>
                <p class="card-text">当前在线：1</p>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">
                推荐阅读
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    @for (var i = 0; i < 5; i++)
                    {
                        <li class="py-1">
                            <a class="text-decoration-none link-body-emphasis" href="#">.NET Web API入门</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">
                标签云
            </div>
            <div class="card-body">
                <a class="text-bg-primary rounded d-inline-block px-2 py-1 m-1 text-decoration-none"
                    href="#">Primary</a>
                <a class="text-bg-secondary rounded d-inline-block px-2 py-1 m-1 text-decoration-none"
                    href="#">Secondary</a>
                <a class="text-bg-success rounded d-inline-block px-2 py-1 m-1 text-decoration-none"
                    href="#">Success</a>
                <a class="text-bg-danger rounded d-inline-block px-2 py-1 m-1 text-decoration-none" href="#">Danger</a>
                <a class="text-bg-warning rounded d-inline-block px-2 py-1 m-1 text-decoration-none"
                    href="#">Warning</a>
                <a class="text-bg-info rounded d-inline-block px-2 py-1 m-1 text-decoration-none" href="#">Info</a>
                <a class="text-bg-light rounded d-inline-block px-2 py-1 m-1 text-decoration-none" href="#">Light</a>
                <a class="text-bg-dark rounded d-inline-block px-2 py-1 m-1 text-decoration-none" href="#">Dark</a>
                <a class="border border-success rounded link-body-emphasis text-decoration-none px-2 py-1"
                    href="#">Dark</a>
            </div>
        </div>
    </div>
</div>