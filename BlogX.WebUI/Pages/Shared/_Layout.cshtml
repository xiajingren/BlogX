<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogX.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogX.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md bg-body-tertiary fixed-top shadow">
            <div class="container">
                <a class="navbar-brand" href="#">xhznl.top</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">首页</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">分类</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">专栏</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">关于</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <div class="input-group">
                            <input type="search" class="form-control" placeholder="search..." aria-label="search" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">搜索</button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-center text-body-secondary">
        <div class="container border-top py-3">
            @*<ul class="list-inline">
                <li class="list-inline-item"><a class="text-decoration-none link-body-emphasis" target="_blank" href="https://www.github.com">github</a></li>
                <li class="list-inline-item"><a class="text-decoration-none link-body-emphasis" target="_blank" href="https://www.github.com">github</a></li>
                <li class="list-inline-item"><a class="text-decoration-none link-body-emphasis" target="_blank" href="https://www.github.com">github</a></li>
            </ul>*@
            <p>Powered by <a class="text-decoration-none link-body-emphasis" target="_blank" href="https://dotnet.microsoft.com">.NET 7.0</a></p>
            <p>&copy; 2023 - xhznl.top</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>